{
  "name": "email-client",
  "version": "1.0.0",
  "description": "Cliente de correo completo con SMTP, IMAP y POP3",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install",
    "dev-all": "concurrently \"npm run dev\" \"npm run client\""
  },
  "keywords": ["email", "smtp", "imap", "pop3"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.7",
    "imap": "^0.8.19",
    "mailparser": "^3.6.5",
    "poplib": "^0.1.7",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
